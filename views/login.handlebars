<h1>Login</h1>
<form action="/login" method="post">
    <label for="email">Email : </label>
    <input type="email" name="email"><br>
    <label for="senha">Senha : </label>
    <input type="password" name="senha"><br>
    <br>
    <button type="submit">Enviar</button>
</form>
{{#if msg}}
    <p>{{msg}}</p>
{{/if}}